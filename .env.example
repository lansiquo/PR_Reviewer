# --- App ---
APP_NAME=pr-security-reviewer
APP_ENV=development
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info

# --- GitHub App (placeholders; no real secrets here) ---
GITHUB_APP_ID=123456
# Prefer BASE64 of your PEM so it stays one line in .env:
GITHUB_APP_PRIVATE_KEY_BASE64=REPLACE_WITH_BASE64_OF_PEM
# Or use a file path instead of BASE64 (ignored file outside repo is best):
# GITHUB_APP_PRIVATE_KEY_PATH=./secrets/github-app.pem
GITHUB_WEBHOOK_SECRET=CHANGE_ME
# Optional OAuth (if you offer web login):
GITHUB_CLIENT_ID=YOUR_CLIENT_ID
GITHUB_CLIENT_SECRET=YOUR_CLIENT_SECRET

# --- Webhook ---
WEBHOOK_PATH=/github/webhook
PUBLIC_URL=http://localhost:8000

# --- Database / Cache ---
DATABASE_URL=postgresql+psycopg://app:password@localhost:5432/pr_security_reviewer
REDIS_URL=redis://localhost:6379/0

# --- CORS (comma-separated origins) ---
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# --- Observability (optional) ---
SENTRY_DSN=
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=pr-security-reviewer

# --- Workers / Queues (optional) ---
ENABLE_ASYNC_WORKERS=true
RQ_DEFAULT_TIMEOUT=300

# --- Uvicorn (dev) ---
UVICORN_RELOAD=true

# Force offline rulles
PRSEC_FORCE_OFFLINE=1
